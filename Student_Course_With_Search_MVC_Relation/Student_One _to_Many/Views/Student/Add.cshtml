@model Student_One__to_Many.Models.Student

<h4>Add Student Here</h4>

  <form asp-action="Add">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
     
      <div class="form-group">
        <label asp-for="Student_Name"></label>
        <input asp-for="Student_Name" class="form-control" />
      </div>
      <div class="form-group">
        <label asp-for="Student_Email"></label>
        <input asp-for="Student_Email" class="form-control" />
      </div>
      <div class="form-group">
        <label asp-for="Student_Phone"></label>
        <input asp-for="Student_Phone" class="form-control" />
      </div>
      <div class="form-group">
        <label asp-for="Student_City"></label>
        <input asp-for="Student_City" class="form-control" />
      </div>
      <div class="form-group">
        <label asp-for="Course_Id" class="control-label"></label>
        <select asp-for="Course_Id" asp-items="ViewBag.Course_Id" class="form-control"></select>
      </div>
      <div class="form-group">
          <input type="submit" value="Add" class="btn btn-success" /> 
      </div>
  </form>
