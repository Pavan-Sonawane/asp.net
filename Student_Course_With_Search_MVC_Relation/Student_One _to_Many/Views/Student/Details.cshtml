@model Student_One__to_Many.Models.Student
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Details Of The User</h4>


<div class="table-responsive">
    <table class="table table-bordered">
        <tbody>
            <tr>
                <th>ID</th>
                <td>@Html.DisplayFor(model => model.Id)</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>@Html.DisplayFor(model => model.Student_Name)</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>@Html.DisplayFor(model => model.Student_Email)</td>
            </tr>
            <tr>
                <th>City</th>
                <td>@Html.DisplayFor(model => model.Student_City)</td>
            </tr>
            <tr>
                <th>Course</th>
                <td>@Html.DisplayFor(model => model.Course.CourseName)</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>@Html.DisplayFor(model => model.Student_Phone)</td>
            </tr>
        </tbody>
    </table>
    <a asp-action="Index" class="btn btn-primary">Back To List</a>
</div>
