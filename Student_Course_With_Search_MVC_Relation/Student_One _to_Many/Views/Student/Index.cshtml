@model IEnumerable<Student_One__to_Many.Models.Student>

<h4>List Of Students</h4>
<p>
    <a asp-action="Add">Create New</a><br />
   
</p>

<form asp-action="Search" method="post">
    <div class="form-group">
        <input type="text" class="form-control" name="searchName" placeholder="Search by Name" />
    </div>
    <button type="submit" class="btn btn-primary">Search</button>
</form>

@if (Model.Count() > 0)
{
    <h2>Search Results:</h2>
    <table class="table">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Id)</th>
                <th>@Html.DisplayNameFor(model => model.Student_Name)</th>
                <th>@Html.DisplayNameFor(model => model.Student_Email)</th>
                <th>@Html.DisplayNameFor(model => model.Student_Phone)</th>
                <th>@Html.DisplayNameFor(model => model.Student_City)</th>
                <th>@Html.DisplayNameFor(model => model.Course.CourseName)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var course in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => course.Id)</td>
                    <td>@Html.DisplayFor(modelItem => course.Student_Name)</td>
                    <td>@Html.DisplayFor(modelItem => course.Student_Email)</td>
                    <td>@Html.DisplayFor(modelItem => course.Student_Phone)</td>
                    <td>@Html.DisplayFor(modelItem => course.Student_City)</td>
                    <td>@Html.DisplayFor(modelItem => course.Course.CourseName)</td>
                    <td>
                        || <a asp-action="Edit" asp-route-id="@course.Id">Edit</a>||
                        || <a asp-action="Details" asp-route-id="@course.Id">Details</a>||
                        || <a asp-action="Delete" asp-route-id="@course.Id">Delete</a>||
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>No results found.</p>
}
