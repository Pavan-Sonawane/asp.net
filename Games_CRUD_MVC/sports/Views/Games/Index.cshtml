@model IEnumerable<sports.Models.Game>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name_of_candidate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name_of_game)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type_of_game)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Coach_name)
            </th>
