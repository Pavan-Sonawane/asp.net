@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name_of_candidate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name_of_game)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type_of_game)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Coach_name)
            </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TimeStamp)
                </td>
            <td >
                <a asp-action="Edit" asp-route-id="@item.Id" >Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
