                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Book" asp-action="Index">Book Operation</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="BorrowedBook" asp-action="Index">BorrowedBook Operation</a>
                        </li>
                    </ul>
                    @Html.Partial("_UniversalSearch")
